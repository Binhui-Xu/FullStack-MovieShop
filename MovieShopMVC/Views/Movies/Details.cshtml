@model ApplicationCore.Models.MovieDetailResponseModel

@{
    ViewData["Title"] = "Detail Page";
}
@*Top Movie Info*@

<div class="card bg-dark text-white overflow-hidden" style="width: 100%">
    <img src="@Model.PosterUrl" class="" alt="@Model.Title" style="opacity: 0.1; width: 100% ;height:400px">
    <div class="card-img-overlay">
        <div class="container-fluid">
            <div class="row">
                <div class="col">
                    <img src="@Model.PosterUrl" class="img-fluid" alt="@Model.Title" >
                </div>
                <div class="col-6">
                    <h2>@Model.Title</h2>
                    <p>@Model.Tagline</p>
                    <div class="row">
                        <div class="col">
                            <span>@Model.RunTime m</span> | <span>@Model.ReleaseDate</span>
                        </div>
                        <div class="col">
                            @foreach (var genre in @Model.Genres)
                            {
                                <span class="badge bg-secondary">@genre.Name</span>
                            }
                        </div>
                    </div>
                    <span class="badge bg-warning text-dark">@Model.Rating</span>
                    <p>@Model.Overview</p>
                </div>
                <div class="col">
                    <div class="d-grid gap-2 col-6 mx-auto">
                        <button type="button" class="btn btn-outline-primary"><i class="fas fa-edit"></i>REVIEW</button>
                        <button type="button" class="btn btn-outline-primary"><i class="fas fa-play"></i>TRAILER</button>
                        <button type="button" class="btn btn-outline-primary">BUY @Model.Price</button>
                        <button type="button" class="btn btn-outline-primary">WATCH MOVIE</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@*Left Movie Facts*@
@*Right Cast Info*@
<div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-4 bg-light">
                <h4>MOVIE FACTS</h4>
                <ul class="list-group list-group-flush">
                  <li class="list-group-item"><i class="far fa-calendar-alt"></i>&nbsp;Release Date&nbsp;<span class="badge bg-secondary">@Model.ReleaseDate</span></li>
                  <li class="list-group-item"><i class="fas fa-hourglass-half"></i>&nbsp;Run Time&nbsp;<span class="badge bg-secondary">@Model.RunTime m</span></li>
                  <li class="list-group-item"><i class="far fa-money-bill-alt"></i>&nbsp;Box Office&nbsp;<span class="badge bg-secondary">$$@Model.Revenue</span></li>
                  <li class="list-group-item"><i class="fas fa-dollar-sign"></i>&nbsp;Budget&nbsp;<span class="badge bg-secondary">$$@Model.Budget</span></li>
                  <li class="list-group-item"><i class="fab fa-imdb"></i>&nbsp;&nbsp;&nbsp;&nbsp;<i class="fas fa-share-square"></i></li>
                </ul>
            </div>
            <div class="col-8">
                <h4>CAST</h4>
                <ul class="list-group list-group-flush">
                    @foreach (var cast in @Model.Casts)
                    {
                        <li class="list-group-item">
                            <div class="row">
                                <div class="col"><img class="img-fluid" src="@cast.ProfilePath" style="border-radius: 50%; width: 30px ;height:50px"></div>
                                <div class="col">@cast.Name</div>
                                <div class="col">@cast.Character</div>
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>
